<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>
      {{user.firstNameUser}}_{{user.lastNameUser}}_{{calendar.month}}_{{year}}
    </title>
    <style>
      body { color: #F5DE1B; font-family: sans-serif; margin: 0; padding: 0; } .myCard {
      background-color: #414a4c; color: #ffffff; font-weight: 500; border-radius: 5px; padding:
      10px; margin-bottom: 15px; } .timesheetContent{ background-color: #006380; height: 297mm;
      margin: 0; padding: 0;}
    </style>
  </head>
  <body>
    <div class="timesheetContent">
      <div class="container">
        <h1 class="text-center py-3">
          Timesheet di {{calendar.month}} {{year}}
        </h1>
        <h3 class="text-center pb-3">
          Per {{user.fullNameUser}}
        </h3>
        <header class="d-flex justify-content-evenly align-items-center my-4 fw-bold text-white">
          <div>
            Ore Lavoro: {{workHours}}
          </div>
          <div>
            Ore Permesso: {{permitHours}}
          </div>
          <div>
            Ore Malattia: {{diseaseHours}}
          </div>
          <div>
            Ore Ferie: {{vacationHours}}
          </div>
          <div>
            Ore Totali: {{totalHours}}
          </div>
        </header>

        <div class="content">
          {{#each calendar.days}}
            <div class="myCard">
              <div class="day">
                {{this.day}}
              </div>
              <div>
                {{#each this.ranges}}
                  <div class="range">
                    {{this.label}} [{{this.startTime}} - {{this.endTime}}]
                  </div>
                {{/each}}
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </body>
</html>